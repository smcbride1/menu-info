<h1>Login</h1>
<% if flash[:warning] %>
    <div id="error_explanation">
        <h2><%= flash[:warning] %></h2>
    </div>
<% end %>

<div class="form">
    <%= form_tag "/login" do %>
        <%= label_tag :email, "Email" %>
        <br>
        <%= text_field_tag :email %>
        <br>
        <%= label_tag :password, "Password" %>
        <br>
        <%= password_field_tag :password %>
        <br>
        <%= submit_tag "Login" %>
    <% end %>
</div>