<h1>Restaurants</h1>
<% if params.has_key?(:user_id) && params[:user_id] == current_user.id.to_s %>
    <br>
    <div class="wrapper">
        <a href="<%= new_restaurant_path %>"><button>New Restaurant</button></a>
    </div>
<% end %>
<br>
<div class="card">
    <div class="container">
        <% if @restaurants.any? %>
            <% @restaurants.each do |restaurant| %>
                <h1><%= link_to restaurant.name, restaurant %></h1>
                <h2><%= truncate(restaurant.description, length: 30) %></h2>
                <br>
            <% end %>
        <% else %>
            <h2>There are currently no restaurants.</h2>
        <% end %>
    </div>
</div>