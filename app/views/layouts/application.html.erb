<!DOCTYPE html>
<html>
  <head>
    <title>Menu Info</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <a href="/"><img class="logo" src="<%= image_path('logo.png') %>" alt="logo"></a>
      <nav>
        <ul class="nav__links">
          <li><a href="/restaurants">RESTAURANTS</a></li>
          <li>|</li>
          <li><a href="/menus">MENUS</a></li>
          <li>|</li>
          <li><a href="/menu_items">MENU ITEMS</a></li>
        </ul>
      </nav>
      <% if logged_in? %>
        <%= form_tag "/logout" %>
        <%= submit_tag "Logout" %>
      <% else %>
        <a class="button_small" href="/login"><button>Login</button></a>
      <% end %>
    </header>
    <br>
    <br>
    <%= yield %>
    <footer>
      <ul>
        <li><a href="/about">ABOUT</a></li>
        <li>|</li>
        <li>Copyright 2020</li>
        <li>|</li>
        <li>Made with ‚ù§ by Stephen McBride</li>
      </ul>
    </footer>
  </body>
</html>
