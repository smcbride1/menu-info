<div class="wrapper">
<%= form_tag "/search", method: :get %>
<% placeholder = "Search..." %>
<%= text_field_tag :query, nil, placeholder: placeholder, value: @query %>
<%= submit_tag "Search" %>
</div>
<h1>Results:</h1>
<% if !@results["restaurant_results"].any? && !@results["menu_results"].any? && !@results["menu_item_results"].any? %>
    <h2>No Results for '<%= @query %>'</h2>
<% end %>
<% if @results["restaurant_results"].any? %>
    <hr>
    <h1>🏨 Restaurants</h1>
    <% @results["restaurant_results"].each do |result| %>
        <h2><%= link_to result.name, result %></h2>
    <% end %>
<% end %>
<% if @results["menu_results"].any? %>
    <hr>
    <h1>📃 Menus</h1>
    <% @results["menu_results"].each do |result| %>
        <h2><%= link_to result.name, result %></h2>
    <% end %>
<% end %>
<% if @results["menu_item_results"].any? %>
    <hr>
    <h1>🍴 Menu Items</h1>
    <% @results["menu_item_results"].each do |result| %>
        <h2><%= link_to result.name, result %></h2>
    <% end %>
<% end %>