<h1>Edit</h1>
<div class="form">
    <%= form_for current_user do |f| %>
        <%= f.label :name, "Name" %>
        <br>
        <%= f.text_field :name %>
        <br>
        <%= f.label :email, "Email" %>
        <br>
        <%= f.text_field :email %>
        <br>
        <%= f.label :password, "Password" %>
        <br>
        <%= f.password_field :password %>
        <br>
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <br>
        <%= f.password_field :password_confirmation %>
        <br>
        <%= f.submit "Edit" %>
    <% end %>
</div>